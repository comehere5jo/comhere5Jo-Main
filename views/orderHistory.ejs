<table>
        <caption>주문 내역</caption>
        <thead>
            <tr>
                <th>세탁물사진</th>
                <th>옷 종류</th>
                <th>Name</th>
                <th>신청일</th>
                <th>리뷰</th>
            </tr>
        </thead>
        <tbody>
        <% for ( var i = 0; i <data.length; i++ ) { %>
            <tr>
                <td><img src="<%= data[i].picture %>" alt="img"></td>
                <td><%= data[i].clothType %></td>
                <td><%= data[i].requests %></td>
                <td><%= data[i].createdAt %></td>
                <td>
                    <button class="view">view</button>
<!--                    <button class="delete">Delete</button>-->
                </td>
            </tr>
            <% } %>
        <tfoot>
            <td colspan="5" class="tablefoot"></td>
        </tfoot>
    </table>
</body>
